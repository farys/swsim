<% content_for :title, "Nowa wiadomość do " + @receiver.to_s %>
<h1>Nowa wiadomość do <%= @receiver %></h1>

<div class="standardField" style="width:950px;padding:30px;margin: 10px auto">
<p>Do: <%= @receiver %></p>
<p>Od: <%= @logged_user %></p>
<% form_for [@receiver, @message] do |f| %>

<% unless @old_message.nil? %><%= hidden_field_tag :reply_message_id, @old_message.id %><% end %>

<%= f.hidden_field :receiver_id %>
<%= render "layouts/error_messages", :target => @message %>  

<p>
  <%= f.label :topic, 'Temat' %><br />
  <%= f.text_field :topic %>
</p>
<p>
  Treść wiadomości<br />
<%= f.text_area :body, :class => "mceEditor" %>
</p>

<br />
<%= f.submit "Wyślij" %>
<% end %>
</div>

