<%= render 'project/shared/menu' %>

<div class="span-22 last">
  <div class="prepend-1 span-7">
    <table class="list">
      <tr>
        <td>Nazwa</td>
        <td><%= @project.name %></td>
      </tr>
      <tr>
        <td>Uwtorzony</td>
        <td><%= escape_date(@project.created_at) %></td>
      </tr>
      <tr>
        <td>Do końca</td>
        <td>
        	<% if @project.active? %>
        		<b><%= time_ago_in_words(@project.deadline) %></b> 
        			 (<%= escape_time(@project.deadline) %>)
        	<% else %>
        		Projekt <b>zakończony</b> (<%= escape_date(@project.updated_at) %>)
        	<% end %>
        </td>		
      </tr>
      <tr>
        <td>Właściciel</td>
        <td>
        	<%= link_to(User.find(@project.owner_id).login,
        	 						user_path(User.find(@project.owner_id).id))  %>     	
        </td>
      </tr>
      <tr>
        <td>Lider</td>
        <td>
        	<%= link_to(User.find(@project.leader_id).login,
        	 						user_path(User.find(@project.leader_id).id))  %>
        </td>
      </tr>
      <tr>
        <td>Użytkownicy</td>
        <td><%= link_to(@members.count, project_members_path(@project)) %></td>
      </tr>
      <tr>
      	<td>Aukcja</td>
      	<td><%= link_to(Auction.find(12).title, auction_path(12)) %></td>
      </tr>
      <% if @project.owner_id == current_user.id && @project.status == Project::STATUSES[:active] %>
      	<tr>
      		<td>Akcje</td>
      		<td>
      			<%= form_for @project, :url => project_info_path(@project) do |f| %>
      			<%= f.submit "Zakończ projekt" %>
      			<% end %>
      		</td>
      	</tr>
      <% end %>
    </table>
  </div>
  <div class="span-12 last append-1 prepend-1">
    <% if can_edit?('info') %>
    <%= render :partial => 'edit' %>
    <% else %>
      <table>
        <tr>
          <td>Opis</td>
        </tr>
        <tr>
          <td><%= @project.description %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>