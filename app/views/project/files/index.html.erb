<%= render 'project/shared/menu' %>

<div class="span-10 prepend-1">
	<% if can_edit? 'file' %>
		<div class="span-3 prepend-8" style="margin-bottom: 5px">
			<%= button 'Dodaj plik', :action => :new %>
		</div>
	<% end %>
	<table class="list">
  <thead>
    <tr>
      <th class="span-5">Nazwa</th>
      <th>Rozmiar</th>
      <th>Akcja</th>
    </tr>
  </thead>
  <tbody>
    <% @files.each do |file| %>
      <tr>
        <td><%= link_to file.name, project_file_path(@project, file) %></td>
      	<td><%= escape_file_size file.size %></td>
      	<td>
      		<%= link_to 'UsuÅ„', project_file_path(@project, file), :method => :delete if can_edit? 'file' %>
      		<%= button 'Pobierz', file.project_file.url %>
      	</td>
    	</tr>
    <% end %>
  </tbody>
</table>
</div>
