<div class="span-3 prepend-8" style="margin-bottom: 5px">
	<%= button 'Dodaj użytkownika', :action => :new %>
</div>
<table class="list">
  <thead>
    <tr>
      <th>Login</th>
      <th>Kontakt</th>
      <th>Rola</th>
      <th>Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |user| %>
    	<tr>
	    	<% if user.id == @project.owner_id || user.id == @project.leader_id %>
	    		<td><%= link_to user.login, user_path(user) %></td>
	      	<td>
	      		<%= link_to 'PW', :controller => 'panel/messages',
														  :action => :new,
	        										:receiver_login => user.login %> |
	        	<%= mail_to user.email %>
	      	</td>
	      	<td><%= escape_column(@project.user_role(user.id), "name").capitalize %></td>
	      	<td>brak</td>
	    	<% else %>
          <% membership = @project.find_membership(user.id) %>
	    		<%= form_for membership, :url => project_member_path(@project, membership) do |f| %>
	    			<%= f.hidden_field :user_id %>
		    		<td><%= link_to user.login, user_path(user) %></td>
		      	<td>
		      		<%= link_to 'PW', :controller => 'panel/messages',
															  :action => :new,
		        										:receiver_login => user.login %> |
		        	<%= mail_to user.email %>
		      	</td>
		      	<td><%= f.select('role_id',roles_for_select(@project.user_role(user.id)))%></td>
		      	<td>
		      		<%= f.submit "Zapisz" %>		      		
		      		<%= link_to 'Usuń', project_member_path(@project, membership), :method =>:delete %>
		      	</td>
		      <% end %>		      
	    	<% end %>	      
	    </tr>
	  <% end %>
  </tbody>
</table>