<%= render 'project/shared/menu' %>

<div class="span-3 prepend-1">
	<%= form_for @memb, :url => project_members_path(@project, @memb) do |f| %>
		<%= render "layouts/error_messages", :target => @memb %>
    <p>
      <%= f.label 'ID użytkownika' %><br />
      <%= f.text_field :user_id %>
    </p>
    <p>
      <%= f.label 'Rola' %><br />
      <%= f.select('role_id', roles_for_select(Role.new)) %>
    </p>   
    <p>
      <%= f.submit "Dodaj użytkownika" %>
    </p>
	<% end %>
</div>
