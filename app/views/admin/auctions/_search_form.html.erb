          <%= label_tag "status[#{Auction::STATUS_CANCELED}]", "anulowane" %>,
          <%= check_box_tag "status[#{Auction::STATUS_FINISHED}]", Auction::STATUS_FINISHED, @status.include?(Auction::STATUS_FINISHED) %>
          <%= label_tag "status[#{Auction::STATUS_FINISHED}]", "zakoÅ„czone" %>

          <%= submit_tag "wyszukaj" %>
      </div>

    </div>
  <% end %>
</div>