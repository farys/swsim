      <%= label_tag "status[#{Auction::STATUS_FINISHED}]", "zakoÅ„czone" %>
      sortuj <%= select_tag "order", options_for_select(Auction::ORDER_MODES, @order) %>
      <%= submit_tag "wyszukaj" %>
    </div>
  </div>
<% end %>