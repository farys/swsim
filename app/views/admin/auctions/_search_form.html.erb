<div class="span-22 last append-bottom">

  <% form_tag result_admin_auctions_path, :method => :get do |f| %>
    <div class="prepend-1 append-1 span-20">
      <div class="box center">
          Nazwa lub ID: <%= text_field_tag :query, @query %>
          <%= check_box_tag "on_date", true, @on_date %>
          <%= label_tag "on_date", "rozp w" %>
