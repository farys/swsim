<div class="left prepend-1">
<% form_for [@blogcomment] do |f| -%>
  <%= render "layouts/error_messages", :target => @blogcomment %>
  <div class="field">
  	<%= f.label :content %><br />
    <%= f.text_area :content, :class => 'span-10' %>
    <%= hidden_field_tag(:blogpost_id, @blogpost.id) %>
    <%= hidden_field_tag(:user_id, current_user.id) %>
  </div>
  <div class="field">
  <%= f.label :recaptcha, "Przepisz kod z obrazka" %><br />
  <%= raw(get_captcha(:options => {:theme => 'white', :tabindex => 10})) %>
  </div>
  <div class="actions">
    <%= f.submit t('general.send') %>
  </div>
  </div>
<% end %>
