<div class="prepend-1 span-22 last">
  <div class="span-6">
    <table class>
      <tr>
      	<td colspan="2" id="table_title">
      		Dane osobowe 
      	</td>
      </tr>
      <tr>
        <td>Login</td>
        <td><b><%= @user.login %></b></td>
      </tr>
      <tr>
        <td>Imie</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>Nazwisko</td>
        <td><%= @user.lastname %></td>
      </tr>
      <tr>
        <td>Utworzony</td>
        <td><%= escape_date(@user.created_at) %></td>
      </tr>
      <tr>
        <td>Kraj</td>
        <td><%= image_tag(@country_flag) %> <%= @country_name %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>Status konta</td>
        <td><%= @statuses[@user.status] %></td>
      </tr>
    </table>
    </div>
    <div class="prepend-0 span-9">
    <table class>
    <tr>
    	<tr>
      	<td colspan="2" id="table_title">
      		O sobie
      	</td>
      </tr>
        <td style="vertical-align: top; border-right: 1px solid black;"><%= image_tag @user.avatar.url(:thumb) %></td><td><%= simple_format(@user.description) -%></td>
      </tr>
    </table>
    </div>
    <div class="prepend-0 span-6">
    <table class>
    <tr>
    	<tr>
      	<td colspan="2" id="table_title">
      		Statystyki
      	</td>
      </tr>
        <td>
        	<%= render 'shared/zaufani' %>
        	Projektów: <%= link_to @projects.count, user_userprojects_path(@user) %><br />
        	Punktów bonusowych: <%= link_to @pts, user_bonuspoints_path(@user) %><hr>
        	Zakończonych aukcji: <%= @reputation.finished_auctions %><br />
        	Suma ocen za wystawione aukcje: <%= @reputation.auctions_overall_ratings %><hr>
        	Liczba ocen otrzymanych za projekty: <%= @reputation.rated_projects %><br />
        	Suma ocen za projekty: <%= @reputation.projects_overall_ratings %><br />
        	Średnia suma ocen za kontakt: <%= @reputation.average_contact %><br />
        	Średnia suma ocen za realizacje: <%= @reputation.average_realization %><br />
        	Średnia suma ocen za stosunek do pracy: <%= @reputation.average_attitude %><br />
        	<div class="center bold"><font size="6">Reputacja:</font><br />
        		<font size="7" color="red"><%= @reputation.reputation %>%</font>
        	</div>
        </td>
      </tr>
    </table>
    </div>
    <div class="clear span-11 center">
  <% if current_user?(@user) || current_user.role == "administrator" %>
  <%= link_to 'Edytuj dane', edit_user_path(params[:id]) %>
  <% end %>
  <%= render 'watch_form' if signed_in? %>
  </div>