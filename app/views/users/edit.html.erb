<div class="prepend-1">
<% form_for @user, :html => { :multipart => true } do |f| -%>
<%= render "layouts/error_messages", :target => @user %>
<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, :value => @user.name.force_encoding("UTF-8"), :class=>"span-6" %>
</div>
<div class="field">
  <%= f.label :lastname %><br />
  <%= f.text_field :lastname, :value => @user.lastname.force_encoding("UTF-8"), :class=>"span-6" %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email, :value => @user.email.force_encoding("UTF-8"), :class=>"span-6" %>
</div>
<% if current_user.role == "administrator" %>
<div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password, :class=>"span-6" %>
</div>
<div class="field">
  <%= f.label :password_confirmation, "Confirmation" %><br />
  <%= f.password_field :password_confirmation, :class=>"span-6" %>
</div>
<% end %>
<div class="field">
<%= f.label :country %><br />
<%= f.select :country, $countries, {:selected => @user.country} %>
</div>
<div class="field">
<%= f.file_field :avatar %>
</div>
<div class="field">
  <%= f.label :description %><br />
  <%= f.text_area :description, :value => @user.description.force_encoding("UTF-8"), :class => "mceEditor span-10" %>
</div>
<%= f.submit "Edit" %>
<% end %>
</div>
