<% if @projects.empty? %> 
  <%= raw flash_t("notice") %>
<% else %>
  <table class="list">
    <thead>
      <tr>
        <td>Nazwa</td>
        <td>Rola</td>
        <td>Termin</td>
        <td>Status</td>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |proj| %>
        <tr>
          <td><%= link_to proj.name, project_info_path(proj) %></td>
          <td><%= escape_column(proj.user_role(@logged_user), "name").capitalize %></td>
          <td>
            <%= escape_date(proj.deadline) %>
            (Pozosta≈Ço <%= time_ago_in_words(proj.deadline) %>)
          </td>
          <td><%= escape_status(proj).capitalize %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
<% end %>
