<% content_for :title, @message.topic %>
<div class="prepend-1 span-20 append-1">
  <div class="span-3">
    Do: <%= link_to @message.receiver, @message.receiver %>
  </div>
  <div class="span-3">
    Od: <%= link_to @message.author, @message.author %>
  </div>
  <div class="span-5">
    Wysłano: <%= escape_time(@message.created_at) %>
  </div>
  <div class="span-9 last">Opcje:
    <% if @message.receiver_id.eql?(@current_user.id) %>
      <%= link_to 'Odpisz', get_message_path("reply_message_path", @message) %>,
    <% end %>
    <%= link_to 'Usuń wiadomość', get_message_path("message_path", @message), :method => :delete, :confirm => 'Czy na pewno?' %>
  </div>

  <div class="span-20 top-1">
    <%= raw @message.body %>
  </div>
  <div class="clear top-1"></div>
</div>


